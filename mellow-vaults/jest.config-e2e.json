{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": ["node_modules", "src"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "preset": "ts-jest",
  "testPathIgnorePatterns": ["dist"],
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/src/$1",
    "constants/common": "<rootDir>/src/shared/constants/common/mainnet"
  }
}