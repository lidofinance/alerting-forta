{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
  "plugins": ["@typescript-eslint", "prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",
    "curly": "error"
  },
  "overrides": [
    {
      "files": ["tests/**/*", "*.spec.ts"],
      "env": {
        "jest": true
      }
    }
  ]
}