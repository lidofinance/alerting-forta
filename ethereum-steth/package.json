{
  "name": "lido-steth-forta-bot",
  "version": "2.0.0",
  "description": "Forta Bot for Lido stETH",
  "repository": {
    "type": "git",
    "directory": "https://github.com/lidofinance/alerting-forta/tree/main/ethereum-steth"
  },
  "license": "MIT",
  "chainIds": [
    1
  ],
  "chainSettings": {
    "default": {
      "shards": 1,
      "target": 5
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "scripts": {
    "update-version": "node ../utils/write-version.js",
    "move-migrations": "mkdir -p dist/db/migrations && cp src/db/migrations/* dist/db/migrations/",
    "move-forta-grpc": "mkdir -p dist/proto && cp src/proto/* dist/proto/",
    "build": "tsc --build && yarn run copy-version && yarn run move-migrations",
    "copy-version": "cp version.json dist",
    "start": "ts-node src/main.ts",
    "start:prod": "node dist/main.js",
    "start:docker:prod": "node src/main.js",
    "push": "yarn run update-version && forta-agent push",
    "test": "jest",
    "generate-types": "typechain --target=ethers-v5 --out-dir=./src/generated/smart-contracts src/abi/*",
    "postinstall": "yarn generate-types && yarn move-forta-grpc",
    "eslint:lint": "eslint ./src ./tests",
    "eslint:format": "eslint ./src ./tests --fix",
    "prettier:check": "prettier --check ./src ./tests",
    "prettier:format": "prettier --write ./src ./tests README.md",
    "lint": "yarn run prettier:check && yarn run eslint:lint",
    "format": "yarn run eslint:format && yarn run prettier:format"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@grpc/grpc-js": "^1.10.2",
    "@grpc/proto-loader": "^0.7.10",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "async-mutex": "^0.4.0",
    "bignumber.js": "^9.1.2",
    "ethers": "^5.5.1",
    "express": "^4.19.2",
    "forta-agent": "^0.1.48",
    "fp-ts": "^2.16.1",
    "google-protobuf": "^3.21.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "prom-client": "^15.1.2",
    "sqlite": "3",
    "ts-retry": "^4.2.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node20": "^20.1.2",
    "@typechain/ethers-v5": "^11.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.27",
    "@types/nodemon": "^1.19.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postinstall": "^0.8.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-generator": "^0.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.2"
  },
  "packageManager": "yarn@1.22.21"
}
